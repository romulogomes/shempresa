*{
	font-family: 'Didact Gothic', Helvetica, Arial;
}

body{
  background: #f9f9f9;
  background-image: -webkit-gradient(linear,left top,left bottom,from(#ffffff),to(#F0F0F0));
  background-image: -webkit-linear-gradient(#FFFFFF,#F0F0F0);
  background-image: -moz-linear-gradient(#FFFFFF,#F0F0F0);
  background-image: -ms-linear-gradient(#FFFFFF,#F0F0F0);
  background-image: -o-linear-gradient(#FFFFFF,#F0F0F0);
  background-image: linear-gradient(#FFFFFF,#F0F0F0);
}

a{
  text-decoration: none;
}

.input-icon > input {
  padding-left: 25px;
  padding-right: 6px;
}

.titulo_sistema{
  color: #049552;
  text-align: center;
  margin-top: 6% !important;
  font-size: 26px;
  line-height: normal;
}

.titulo_login{
  color: #000;
  font-size: 20px;
  text-align: center;
}

.caixa_login{
  border: 1px solid rgba(4, 149, 82, 0.54);
  border-radius: 10px;
  padding: 15px;
  text-align: left;
  box-shadow:  7px 25px 30px rgba(0, 0, 0, 0.20);
}

#login{
  margin-left: 8%;
}

#login > .capsula > input{
  width: 80%;
  border: 0;
}

input{
  font-size: 14px;
  padding: 4.5px;
}

input:focus{
}

.capsula{
  background: white;
  border: 1px solid #D5D5D5;
  padding: 6px;
}

.capsula:hover{
  height: 20px;
}

.login_controles{
  margin-top: 7%;
}

#esq_senha{
  float: left;
  font-size: 14px;
  -webkit-transition: all 1s ease; 
  -moz-transition: all 1s ease; 
  -o-transition: all 1s ease; 
  -ms-transition: all 1s ease; 
  transition: all 1s ease; 
}

#esq_senha:hover{
  font-size: 16px;
  text-decoration: underline;
}

#btn-submit{
  width:40%; 
  float:right;
}

.btn-bricky{
  background-color: #049552;
  border-color: #049552;
  color: #ffffff;
  float: right;
  padding: 4px 10px;
  margin-right: 10%;
  transition: all 0.6s ease 0s !important;
}
.btn-bricky:hover{
 background-color: #14B067;
}